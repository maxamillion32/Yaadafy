<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5252">

    <ImageView
        android:id="@+id/satisfied_friend"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_sentiment_very_satisfied_white_48dp" />

    <ImageView
        android:id="@+id/add_friend_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/satisfied_friend"
        android:layout_alignTop="@+id/satisfied_friend"
        android:src="@drawable/ic_add_circle_white_48dp" />

    <TextView
        android:id="@+id/reminder_text_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/satisfied_friend"
        android:gravity="center"
        android:text="@string/add_your_friends"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="Yaadafy"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="48sp" />

</RelativeLayout>